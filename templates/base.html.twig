        <script src=" {{asset('js/script.js')}} "></script>
            <script src="https://cdn.tailwindcss.com" defer></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="min-h-screen bg-[#EDEDED] flex flex-col">
        <header class="p-6 flex flex-row  justify-between">
        
        <div class="flex items-center gap-4 text-slate-700 bg-white p-2 border border-[#33405A] shadow-md rounded-xl">
        <i class="fa-solid fa-file-invoice h-6 w-6 flex items-center justify-center   "></i>
