    <div class="content flex flex-grow">
        {% block body %}{% endblock %}
    </div>
    <footer class="bottom-0 w-full bg-[#37465A] p-4 text-white flex justify-between">
        <div class="flex flex-col items-center gap-4 grow">
            <a href="#" class="text-sm hover:underline">Règlement intérieur</a>
            <span class="text-sm">© 2025 Train'Track - Toutes droits réservés</span>
        </div>
        <div class="flex items-center gap-4">
            <button class="rounded-full bg-white px-4 py-1 text-sm text-slate-700 hover:bg-slate-100">Besoin d'aide</button>
        </div>
    </footer>
