{% extends 'base.html.twig' %}

{% block title %}Hello StagiaireController!{% endblock %}

{% block body %}

<div class="flex flex-col">
<div id="search">
    <form action="{{ path('searchstagiaire') }}" method="post">
            <input type="text" name="text" placeholder="Rechercher...">
            <input class="bg-gray-700 text-white p-1 rounded-md" type="submit" name="submit" id="submit">
    </form>
</div>

<a href=" {{ path('new_stagiaire') }} ">Ajouter un stagiaire</a>
    <h1>Stagiaires</h1>
    <br>
    {% for stagiaire in stagiaires %}
        <div style="display: flex; flex-direction:column">
            <span> {{stagiaire.nom}}&nbsp;{{stagiaire.prenom}}</span>
            <span>{{stagiaire.email}}</span>
            <a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">details</a>
            <a href="{{ path('edit_stagiaire', {'id': stagiaire.id}) }}">modifier</a>
            <a href="{{ path('delete_stagiaire', {'id': stagiaire.id}) }}">supprimer</a>
        </div>
        <br>
    {% endfor %}
</div>
{% endblock %}
