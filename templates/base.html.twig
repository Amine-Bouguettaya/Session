            </svg> #}
            <a href="{{ path('app_home') }}" class="text-lg font-semibold">Train'Track</a>
        </div>
        <nav class="flex flex-row items-center justify-around bg-white border border-[#33405A] shadow-md rounded-xl">
            <a class="px-10" href=" {{ path('app_category') }} ">Category</a>
            <a class="px-10" href=" {{ path('app_formation') }} ">Formations</a>
            <a class="px-10" href=" {{ path('app_stagiaire') }} ">Stagiaires</a>
        </nav>
        <div class="flex items-center gap-4 text-slate-700 bg-white p-2 border border-[#33405A] shadow-md rounded-xl">
            <a href="{{ path('app_logout') }}" class="text-lg font-semibold">Logout</a>
        </div>
